<div class='container'>
<h2>Write a new review for <%=@restaurant.name%></h2>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :rating, prompt: "Choose a rating from 0 - 5", collection: 0..5 %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-dark" %>
<% end %>
<%= link_to "Back", restaurant_path(@restaurant) %>
</div>

